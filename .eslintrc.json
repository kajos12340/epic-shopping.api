{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "node"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": "off",
    "semi": 2
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ]
}