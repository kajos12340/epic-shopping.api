{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "node"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": "off",
    "semi": 2,
    "node/no-missing-import": "off"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ]
}